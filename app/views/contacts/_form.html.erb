<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2>El Contacto no se pudo guardar por los siguientes errores:</h2>
      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.text_field :date, :id => 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.number_field :number %>
  </div>
  <div class="field">
    <%= f.label :locality %><br />
    <%= f.text_field :locality %>
  </div>
  <div class="field">
    <%= f.label :contact_state %><br />
    <div id ="state_select">
      <% if @contact.contact_state.present? %>
        <%= f.collection_select(:contact_state_id, ContactState.all, :id, 
          :state, :prompt => 'Seleccione el estado', 
          :selected => @contact.contact_state.state ) %>
      <% else %>
        <%= f.collection_select(:contact_state_id, ContactState.all, :id, 
          :state, :prompt => 'Seleccione el estado') %>
      <% end %>
    </div>
  </div>
  <% if @contact.comment.present? %>
    <div class="comment">
  <% else %>
    <div class="comment" style ="display: none;">
  <% end %>
      <%= f.label :comment %><br />
      <%= f.text_area :comment, :size => '36x5' %>
    </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
