<% hiden = hide rescue false %>
<div id="notice" <%= raw 'style="display: none;"' if hiden %>>
  <p><%= flash.notice || message %></p>
  <div class="close">
    <%= link_to_function(
      'X', "$('#notice').stop().slideUp()", :title => 'Cerrar'
    ) %>
  </div>
</div>
<%= javascript_tag "$('#notice').delay(7000).slideUp();" unless hiden %>